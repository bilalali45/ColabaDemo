    <AutoCompleteTextView
        android:id="@+id/visaStatusView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/grey_color_three"
        android:drawableEnd="@drawable/ic_down_arrow"
        android:dropDownAnchor="@+id/visaStatusView"
        android:focusable="true"
        android:cursorVisible="false"
        android:inputType="none"
        android:focusableInTouchMode="true"
        android:fontFamily="@font/rubik_regular"
        android:gravity="start"
        android:paddingTop="6dp"
        android:paddingBottom="15dp"
        android:spinnerMode="dropdown"
        android:textAlignment="viewStart"
        android:textColor="@color/grey_color_one"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <TextView
        android:id="@+id/relationship_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/rubik_regular"
        android:text="Status Details"

        android:textColor="@color/grey_color_two"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/textView15"
        app:layout_constraintTop_toBottomOf="@+id/visaStatusView" />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/relationshipEditText"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/rubik_regular"
        android:imeOptions="actionNext"
        android:singleLine="false"
        android:hint="Status Details"
        android:text="@string/ipsum_dolor"
        android:textColor="@color/grey_color_one"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relationship_label" />


    <ImageView
        android:id="@+id/phone_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_save_icon"
        app:elevation="3dp"
        android:translationX="18dp"
        android:translationY="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>