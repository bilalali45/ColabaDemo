<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_view_holder_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/search_view_holder_style"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/searchBorrowerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="17dp"
            android:fontFamily="@font/rubik_regular"
            android:textColor="@color/grey_color_one"
            android:textSize="14sp"
            android:text="@string/micheal_blakeley"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:text="@string/contact"
            android:fontFamily="@font/rubik_regular"
            android:textColor="@color/grey_color_one"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/searchBorrowerName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/searchBorrowerName" />

        <TextView
            android:id="@+id/search_contact_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/rubik_regular"
            android:textColor="@color/grey_color_three"
            android:textSize="12sp"
            android:text="asdfasdfdfdfd"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:drawablePadding="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contact"
            app:drawableLeftCompat="@drawable/ic_phone_grey" />

        <TextView
            android:id="@+id/search_email"
            android:layout_width="@dimen/_170sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="jeremymichael@gmail.com"
            android:ellipsize="end"
            android:singleLine="true"
            android:fontFamily="@font/rubik_regular"
            android:textColor="@color/grey_color_three"
            android:textSize="13sp"
            app:drawableLeftCompat="@drawable/ic_email_grey"
            android:drawablePadding="8dp"
            app:layout_constraintStart_toStartOf="@+id/searchBorrowerName"
            app:layout_constraintTop_toBottomOf="@+id/searchBorrowerName" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
