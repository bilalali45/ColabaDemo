<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/top_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="292dp"
        android:layout_height="160dp"
        android:background="@drawable/search_view_holder_style"
        android:paddingBottom="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/answer3_na2"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/rubik_regular"
            android:text="Fedrick"
            android:textColor="@color/grey_color_two"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/answer2_no"
            app:layout_constraintTop_toBottomOf="@+id/answer2_no" />

        <TextView
            android:id="@+id/questionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:fontFamily="@font/rubik_regular"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Demographic Information"
            android:textColor="@color/grey_color_one"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/race_ethnicity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:fontFamily="@font/rubik_regular"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Race / Ethnicity / Gender"
            android:textColor="@color/grey_color_two"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/questionTitle" />

        <TextView
            android:id="@+id/answer1_yes"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/rubik_regular"
            android:text="Maria"
            android:textColor="@color/grey_color_two"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/race_ethnicity"
            app:layout_constraintTop_toBottomOf="@+id/race_ethnicity" />

        <TextView
            android:id="@+id/answer2_no"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/rubik_regular"
            android:text="Richard"
            android:textColor="@color/grey_color_two"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/answer1_yes"
            app:layout_constraintTop_toBottomOf="@+id/answer1_yes" />

        <TextView
            android:id="@+id/answer1_name"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/rubik_regular"
            android:text="- Asian / Indian"
            android:textColor="@color/grey_color_one"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/answer1_yes"
            app:layout_constraintStart_toEndOf="@+id/answer1_yes"
            app:layout_constraintTop_toTopOf="@+id/answer1_yes" />

        <TextView
            android:id="@+id/answer2_name"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/rubik_regular"
            android:text="- Native hawian"
            android:textColor="@color/grey_color_one"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/answer2_no"
            app:layout_constraintStart_toEndOf="@+id/answer2_no"
            app:layout_constraintTop_toTopOf="@+id/answer2_no" />


        <TextView
            android:id="@+id/answer3_name"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/rubik_regular"
            android:text="- Asian / Indian"
            android:textColor="@color/grey_color_one"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/answer3_na2"
            app:layout_constraintStart_toEndOf="@+id/answer3_na2"
            app:layout_constraintTop_toTopOf="@+id/answer3_na2" />

        <TextView
            android:id="@+id/answer4_na"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/rubik_regular"
            android:text="Sohail"
            android:textColor="@color/grey_color_two"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/answer3_na2"
            tools:layout_editor_absoluteX="16dp" />


        <TextView
            android:id="@+id/answer4_name"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/rubik_regular"
            android:text="- Asian / Indian"
            android:textColor="@color/grey_color_one"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/answer4_na"
            app:layout_constraintStart_toEndOf="@+id/answer4_na"
            app:layout_constraintTop_toTopOf="@+id/answer4_na" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

