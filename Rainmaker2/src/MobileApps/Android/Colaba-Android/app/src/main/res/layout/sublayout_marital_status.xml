<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/rubik_medium"
        android:text="@string/martial_status"
        android:textAlignment="center"
        android:textColor="@color/grey_color_two"
        android:textSize="13sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/content_background_full_white"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rb_unmarried"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layoutDirection="rtl"
            android:button="@null"
            android:drawableStart="@drawable/radiodraw"
            android:drawablePadding="15dp"
            android:fontFamily="@font/rubik_regular"
            android:background="@null"
            android:text="@string/martial_status_unmarried"
            android:textColor="@color/grey_color_one"
            android:textSize="14sp"
            android:clickable="true"/>

        <LinearLayout
            android:id="@+id/unmarried_addendum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:clickable="true"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colaba_app_border_color"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/rubik_medium"
                android:text="@string/unmarried_addendum"
                android:textColor="@color/txt_color_app_headings"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/unmarried_addendum_ques"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:fontFamily="@font/rubik_regular"
                android:lineSpacingExtra="10dp"
                android:maxLines="2"
                android:text="@string/unmarried_addendum_ques"
                android:textColor="@color/grey_color_two"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_is_inRelationship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/rubik_medium"
                android:text="@string/no"
                android:textColor="@color/txt_color_app_headings"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatRadioButton
        android:id="@+id/rb_married"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layoutDirection="rtl"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/content_background_full_white"
        android:button="@null"
        android:drawableStart="@drawable/radiodraw"
        android:drawablePadding="15dp"
        android:fontFamily="@font/rubik_regular"
        android:text="@string/martial_status_married"
        android:textColor="@color/grey_color_one"
        android:textSize="14sp" />

    <androidx.appcompat.widget.AppCompatRadioButton
        android:id="@+id/rb_separated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layoutDirection="rtl"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/content_background_full_white"
        android:button="@null"
        android:drawableStart="@drawable/radiodraw"
        android:drawablePadding="15dp"
        android:fontFamily="@font/rubik_regular"
        android:text="@string/martial_status_separated"
        android:textColor="@color/grey_color_one"
        android:textSize="14sp" />

</LinearLayout>


