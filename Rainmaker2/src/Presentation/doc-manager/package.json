{
  "name": "doc-manager",
  "version": "0.1.0",
  "private": true,
  "homepage": "/DocManager",
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^11.0.4",
    "@testing-library/user-event": "^12.6.0",
    "@types/jest": "^24.9.1",
    "@types/node": "^12.12.39",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.6",
    "jwt-decode": "^3.1.2",
    "moment": "^2.29.1",
    "node-sass": "^4.14.1",
    "pspdfkit": "^2020.6.3",
    "rainsoft-js": "^1.0.47",
    "react": "^16.13.1",
    "react-bootstrap": "^1.0.1",
    "react-cookie": "^4.0.3",
    "react-dom": "^16.13.1",
    "react-idle-timer": "^4.5.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.1",
    "react-split": "^2.0.9",
    "typescript": "^3.1.1",
    "universal-cookie": "^4.0.3",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "verify-installation": "node scripts/verify-install.js && node scripts/copy-pspdfkit-files.js",
    "start": "set PORT=3002 && node scripts/verify-install.js && node scripts/copy-pspdfkit-files.js && react-scripts start",
    "build": "node scripts/verify-install.js && node scripts/copy-pspdfkit-files.js && react-scripts build",
    "test": "react-scripts test --env=jest-environment-jsdom-sixteen --verbose --silent",
    "test-dev": "react-scripts test --env=jest-environment-jsdom-sixteen --verbose",
    "test-coverage": "react-scripts test --env=jest-environment-jsdom-sixteen --verbose --silent --coverage . --coverageDirectory='coverage'",
    "test-debug": "react-scripts --inspect-brk test --runInBand --no-cache",
    "eject": "react-scripts eject"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/index.tsx",
      "!src/serviceWorker.ts",
      "!src/Store/endpoints/*.{ts,tsx}",
      "!src/Components/DevLogin/DevLogin.tsx",
      "!src/Entities/Models/*.{ts,tsx}",
      "!src/Shared/*.{ts,tsx}",
      "!src/Store/actions/*.{ts,tsx}",
      "!src/test_utilities/*.{ts,tsx}",
      "!src/Utils/helpers/Delay.ts",
      "!src/Models/*.ts"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "devDependencies": {
    "@testing-library/dom": "^7.29.4",
    "jest-canvas-mock": "^2.3.0",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "ncp": "^2.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
